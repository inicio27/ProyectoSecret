<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClassSplash"
    android:background="@color/colorBlanco">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/dimen_ic_logo"
        android:layout_height="@dimen/dimen_ic_logo"
        android:src="@drawable/logo"
        android:layout_marginBottom="@dimen/margen_ses"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:textSize="@dimen/tam_titulo"
        android:textColor="#00fff1"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/txtdescripcion"
        android:layout_alignEnd="@+id/txtdescripcion" />

    <TextView
        android:id="@+id/txtdescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descripcion"
        android:layout_centerVertical="true"
        android:layout_below="@+id/txtlogo"
        android:layout_alignRight="@+id/logo"
        android:layout_alignEnd="@+id/logo" />
    <ProgressBar
        android:id="@+id/progreso"
        android:layout_width="@dimen/dimen_progress"
        android:layout_height="@dimen/dimen_progress"
        android:layout_marginBottom="@dimen/margen_cincT"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
